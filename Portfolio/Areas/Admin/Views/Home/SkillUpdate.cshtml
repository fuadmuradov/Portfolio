@model Skill
<div class="body-content">
    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card center-block mb-5" style="width:50rem;">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Name" class="font-weight-600"></label>
                            <input asp-for="@Model.Name" class="form-control" id="exampleFormControlInput1" >
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Percent" class="font-weight-600"></label>
                            <input asp-for="@Model.Percent" class="form-control" id="exampleFormControlInput1" >
                            <span asp-validation-for="Percent"></span>
                        </div>
                        <div class="form-group d-none">
                            <input asp-for="@Model.Id" class="form-control" id="exampleFormControlInput1" >

                        </div>
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to Update?')">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

